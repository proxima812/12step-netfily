---
import {
 POSTER,
 THEME_COLOR,
 TITLE_SITE,
 VERIFICATION_GOOGLE,
 VERIFICATION_YANDEX,
} from "../../consts";

export interface Props {
 title: string;
 desc: string;
 poster: string;
 pubDate: string;
}
const title = Astro.props.title || TITLE_SITE;
const { desc, poster, pubDate } = Astro.props;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" href="/rss.xml" title="RSS" />

<meta name="mobile-web-app-capable" content="yes" />
<meta name="theme-color" content={THEME_COLOR} />

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />

<meta name="generator" content={Astro.generator} />

<link rel="manifest" href="/manifest.webmanifest" />
<link rel="yandex-tableau-widget" href="/manifest.ya.json" />

<link rel="icon" href="/favicon.ico">
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link
 rel="apple-touch-icon"
 type="image/png"
 sizes="180x180"
 href="/icons/icon-180x180.png"
/>

<meta name="robots" content="index, follow" />
<link rel="canonical" href={Astro.url} />

<meta name="yandex-verification" content={VERIFICATION_YANDEX} />
<meta name="google-site-verification" content={VERIFICATION_GOOGLE} />

<meta name="title" content={title} />
<meta name="description" content={desc} />

<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content={title} />
<meta property="og:title" content={title} />
<meta property="og:description" content={desc} />
<meta property="og:image" content={Astro.site + poster || Astro.site + POSTER} />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<title>{title}</title>
